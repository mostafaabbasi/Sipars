@model PrivateTraining.Models.LoginViewModel
@using Microsoft.AspNet.Identity;
@{
    Layout = null;
}
<div class="Logincolumn">
    <div class="row" style="padding-right:10px;">
        <input type="hidden" value="{{ReturnUrl}}" />
        <div class="title-login bordered-bottom-1 text-center padding-5 bordered-gray margin-20 font-110 "  >ورود</div>
        @*<div class="col-lg-12" style="margin-bottom:20px;">
            نام کاربری و کلمه عبور خود را وارد نمایید.
        </div>*@

        <form name="LoginPost" novalidate>
            <div class="row PaddingBottom">
                <div class="col-lg-3 text-left">
                    <label>نام کاربری</label>
                </div>
                <div class="col-lg-8">
                    <input type="text" ng-model="login.UserName" class="form-control" />
                </div>
            </div>
            <div class="row PaddingBottom">
                <div class="col-lg-3 text-left">
                    <label>رمز عبور</label>
                </div>
                <div class="col-lg-8">
                    <input type="password" ng-model="login.Password" class="form-control" />
                </div>
            </div>
            <div class="row PaddingBottom">
                <div class="col-lg-2 text-left">

                </div>
                <div class="col-lg-10 ">
                    <button type="submit" class="btn btn-palegreen shiny" value="ورود" ng-click="Login()">ورود </button>

                </div>
            </div>
        </form>
    </div>
</div>