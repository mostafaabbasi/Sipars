<div class="modal" id="ShowPriceWorkUnit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  " style="border-bottom: 4px solid #7ec55a">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true"
                        ng-click="$root.closeThisDialog($event)">×
                </button>
                <h4 class="modal-title">لیست تعرفه ها</h4>
            </div>
            <br/>
            <div class="modal-body">
                <div class="col-sm-3" ng-repeat="X in ListServiceLevel" ng-show="ListServiceLevel.length">
                    <span class="text-success bold">{{X.ServiceLevelTitle}}</span>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>نام واحد کار</th>
                            <th>قیمت</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="item in Priceworkunits">
                            <td>{{item.WorkUnitTitle}}</td>
                            <td>{{item.PriceWorkUnit + (X.PercentServiceLevel/100 * item.PriceWorkUnit) }} تومان</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-3" ng-show="ListServiceLevel.length==0">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>نام واحد کار</th>
                            <th>قیمت</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="item in Priceworkunits">
                            <td>{{item.WorkUnitTitle}}</td>
                            <td>{{item.PriceWorkUnit}} تومان</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" ng-click="$root.closeThisDialog($event)">بستن</button>
            </div>
        </div>
    </div>
</div>
