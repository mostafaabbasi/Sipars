
@model IEnumerable<PrivateTraining.DomainClasses.Entities.PrivateTraining.Service>

<div class="modal" id="AddEditModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" ng-click="CloseService()">×</button>
                <h4 class="modal-title">ثبت </h4>
            </div>
            <div class="modal-body">

                <div class="form-Service">
                    <label>عنوان</label>
                    <input type="text" class="form-control" placeholder="عنوان" ng-model="Service.Title" id="ServiceTitle">
                </div>
            </div>
            <div class="modal-footer">
                <button data-bb-handler="confirm" type="button" class="btn btn-primary" ng-click="AddEditService()">ذخیره</button>
                <button data-bb-handler="cancel" type="button" class="btn btn-default" data-dismiss="modal" ng-click="CloseService()">انصراف</button>
            </div>
        </div>
    </div>
</div>
