                        </span>
                    </div>*@
              
                
                <div class="" style="clear:both;padding-top:20px;text-align:left">
                    <button data-bb-handler="confirm" type="submit" class="btn btn-success" ng-click="EditServiceLocation() ">ذخیره</button>
                    <a  class="btn btn-magenta" ng-href="@Url.Action("GetListServiceLocation", "ServiceLocation")">لیست خدمت محل ها</a>
                </div>
            </form>

        </div>
    </div>



</div>

@section Scripts
{
    <script>
        $("select[name=services]").select2();
        angular.module('App').controller('MainCtrl', function ($rootScope, $scope, $http, $compile) {
            $scope.ServiceLocation = {};
            $scope.Listservices={};
            $scope.ListWorkUnits={};
            angular.element(document).ready(function () {
                $http.post('@Url.Action(MVC.PrivateTrain.ServiceLocation.Actions.LoadEditServiceLocationPrivate())', {"Id":@ViewBag.Id}).success(function (response) {
                    $scope.ServiceLocation = response.tempServiceLocation;
                    $scope.Listservices=response.listServicePeroperties;
                    $scope.ListWorkUnits=response.listWorkUnits;

                });
            });



            $scope.EditServiceLocation=function(){
                $scope.ArrayWorkunit = [];
                $scope.ArrayPrice = [];
                $scope.PriceWorkUnit={};
                angular.forEach($scope.ListWorkUnits, function (x) {
                    if (!!x.selected) {
                        $scope.ArrayWorkunit.push(x.WorkUnitId);
                        $scope.ArrayPrice.push(x.PriceWorkUnit);
                    }
                })


                $http.post('@Url.Action(MVC.PrivateTrain.ServiceLocation.Actions.EditServiceLocationPrivate())', {"paramServiceLocation":$scope.ServiceLocation,"Workunits":$scope.ArrayWorkunit,"PriceWorkUnits":$scope.ArrayPrice}).success(function (response) {
                    if(response.Result){
                        NotifyCustom("ویرایش با موفقیت انجام شد", 'success');
                    }
                    else{
                        NotifyCustom('ویرایش انجام نشد', 'danger');
                    }
                });
            }


        });
    </script>
}


