                    <label>حداقل ظرفیت خدمتیار</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="" ng-model="ServiceLocation.MinCapacityService" name="MinCapacityService" required>
                        <span class="input-group-addon">نفر</span>
                    </div>
                    <span style="color:red" ng-show="AddForm.$submitted && AddForm.MinCapacityService.$invalid">
                        <span ng-show="AddForm.MinCapacityService.$error.required ">لطفا حداقل ظرفیت خدمت را وارد نمایید</span>
