


<div class="modal" id="AddEditCity">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" ng-click="Cancel()">×</button>
                <h4 class="modal-title">ثبت خط</h4>
            </div>
            <div class="modal-body">
                <form name="AddCityForm" novalidate>
                    <input type="hidden" ng-model="City.Id" />
                    <div class="form-group">
                        <label>نام استان</label>
                       <select class="form-control" ng-model="City.StateId" placeholder="نام استان"  id="StateId">
                            @foreach (var item in ViewBag.ListStates)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>نام شهر</label>
                        <input type="text" class="form-control" placeholder="نام شهر" ng-model="City.Name" name="NameCity" required>
                        <span style="color:red" ng-show="AddCityForm.NameCity.$dirty && AddCityForm.NameCity.$invalid ">
                            <span ng-show="AddCityForm.NameCity.$error.required ">لطفا نام شهر را وارد نمایید</span>
                        </span>
                    </div>
                    @*<div class="checkbox">
                        <label>
                            <input type="checkbox" ng-model="City.IsEnable" ng-checked="true"><span class="text">فعال</span>
                        </label>
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button data-bb-handler="confirm" type="button" class="btn btn-primary" ng-click="AddEditSite()">ذخیره</button>
                <button data-bb-handler="cancel" type="button" class="btn btn-default" data-dismiss="modal" ng-click="Cancel()">انصراف</button>
            </div>
        </div>
    </div>
</div>
